
@{
    ViewBag.Title = "Index";
}

<h2>喝水建議量</h2>

@using (Html.BeginForm("Index", "Water", FormMethod.Get))
{

    <p>姓名：@Html.TextBox("name")</p>
    <p>體重：@Html.TextBox("weight")</p>

    if (ViewBag.result != "")
    {
    <p>哈囉~ @ViewBag.name, 你的每日建議喝水量:@ViewBag.result</p>
    }
    
    <input type="submit" value="送出" />
}



